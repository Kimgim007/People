@using People.EntityAndService.Entity
@model Teacher

<style>
	table.table2 {
		border: 0px solid black;
	}

	table.table1 tr {
		border: 1px solid black;
	}

	table.table1 td {
		border: 0px solid black;
	}

	table.table1 th {
		border: 0px solid black;
	}

	body {
		background-image: url('https://kartinkin.net/uploads/posts/2021-01/1611242068_51-p-krasivii-fon-dlya-oblozhki-knigi-57.jpg');
	}
</style>

<div style="width:100%;">

	<div style="float:left;width:80%;">
		<div>
			<h1 style="text-align:center">
				Преподаватель
			</h1>
		</div>
			<div style="text-align:center;">
				<img src="https://impsi.ru/wp-content/uploads/2017/11/Kak-horosho-uchitsya-ili-kak-zavoevat-raspolozhenie-prepodavatelej-4.jpg" style="width:200px;height:200px;" />
			</div>
		<div>
			<table style="width:55%;" class="table2">
				<tr style="height:30px;">
					<th>
						Под именем
					</th>
					<td>
						@Model.Name
					</td>
				</tr>
				<tr style="height:30px;">
					<th>
						Пол
					</th>
					<td>
						@Model.Gender
					</td>
				</tr>
				<tr style="height:30px;">
					<th>
						Возраст
					</th>
					<td>
						@Model.Age()
					</td>
				</tr>
			</table>
		</div>

		<div>
			<h4 style="text-align:center">
				Научные работы
			</h4>
			<table style="width:30%;" class="table1">
				@foreach (var item in Model.scientificWorks)
				{
					<tr>
						<td>
							@Html.ActionLink(@item.Title,"InfoForScientificWork","ScientificWorks",new{@id=@item.Id},new{@class = "menu-element" })
						</td>
					</tr>
				}
			</table>
		</div>
	</div>


	<div style="float:right;width:20%;margin-top:60px;">
		<table style="width:100%;" class="table1">
			<tr>
				<td>
					<h6>
						@Html.ActionLink("Обновить преподавателя","AddTeacher","Teachers",new{@id=@Model.Id},new{@class = "menu-element" })
					</h6>
				</td>
			</tr>
		</table>
	</div>
</div>
