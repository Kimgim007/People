@using People.EntityAndService.Entity
@model List<Student>

<style>
	table.table1 {
		border: 2px solid black;
	}

		table.table1 tr {
			border: 2px solid black;
		}

		table.table1 td {
			border: 2px solid black;
		}

		table.table1 th {
			border: 2px solid black;
		}

	body {
		background-image: url('https://kartinkin.net/uploads/posts/2021-01/1611242068_51-p-krasivii-fon-dlya-oblozhki-knigi-57.jpg');
	}
</style>

<div style="width:100%;">

	<div style="float:left;width:85%;">
		<h1 style="text-align:center">
			Студенты
		</h1>
		<table style="width:40%;" class="table1">
			@foreach (var item in Model)
			{
				<tr>
					<td style="text-align:center">
						@Html.ActionLink(@item.Name, "InfoForStudent", "Students",new{@id = @item.Id} ,new { @class = "menu-element" } )
					</td>
				</tr>
			}
		</table>
	</div>

	<div style="float:right;width:15%;">
		<div>
			<h4>
				<a href="/Students/AddStudent" style="color:black;">Добавить студента</a>
			</h4>
		</div>
	</div>

</div>






